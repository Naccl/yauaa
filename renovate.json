{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "allowedVersions": "!/^(?i).*[-_\\.](Alpha|Beta|RC|M|EA|Snap|snapshot|jboss|atlassian)[-_\\.]?[0-9]?.*$/"
    },
    {
      "description": "Disable major updates for kryo4",
      "matchPackageNames": ["com.esotericsoftware:kryo"],
      "matchCurrentVersion": "[4.0.0,5.0.0)",
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Disable automatic updates for log4j for ElasticSearch",
      "groupName": "elasticsearch.log4j2.version",
      "matchPackagePrefixes": ["org.apache.logging.log4j"],
      "matchCurrentVersion": "[2.11.1]",
      "matchUpdateTypes": ["major", "minor", "patch", "pin"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "org.apache.maven.plugins",
        "org.codehaus.mojo",
        "org.sonarsource.scanner.maven",
        "com.github.spotbugs",
        "com.google.code.maven-replacer-plugin",
        "io.fabric8",
        "pl.project13.maven"
      ],
      "groupSlug": "plugins",
      "groupName": "build plugin dependencies"
    },
    {
      "excludePackagePrefixes": [
        "org.apache.maven.plugins",
        "org.codehaus.mojo",
        "org.sonarsource.scanner.maven",
        "com.github.spotbugs",
        "com.google.code.maven-replacer-plugin",
        "io.fabric8",
        "pl.project13.maven"
      ],
      "groupSlug": "other",
      "groupName": "other dependencies"
    }
  ]
}
